<Page
    x:Class="signedUWP.MainPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:signedUWP"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d">
    <Page.Resources>
        <SolidColorBrush x:Key="Gray1" Color="#314656" />
    </Page.Resources>

    <Grid Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">
        <NavigationView x:ConnectionId='1' x:Name="NavView" Grid.Column="0"
                                                                
                                           
                    Canvas.ZIndex="0" ExpandedModeThresholdWidth="0" OpenPaneLength="40" Margin="0,0,0,0" AlwaysShowHeader="False">
            <NavigationView.MenuItems>
             
                <NavigationViewItemSeparator/>

            </NavigationView.MenuItems>
            <NavigationView.HeaderTemplate>
                <DataTemplate>
                    <Grid Margin="0,0,0,0" >
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="400"/>
                        </Grid.ColumnDefinitions>
                        <Grid Name="MainGrid" Grid.Row="0" Grid.Column="0" Background="{ThemeResource SystemControlAccentDark1AcrylicWindowAccentDark1Brush}">
                            <TextBlock Style="{StaticResource TitleTextBlockStyle}"
                           FontSize="28"
                           VerticalAlignment="Center"
                           x:Name="TitleName"
                           Text="{Binding}" Foreground="White" Margin="24,0,0,0" />
                        </Grid>
   
                        <Grid Name="MainGrid3" Grid.Row="0" Grid.Column="2"  Background="{StaticResource Gray1}">
                            <CommandBar Grid.Column="1"
                            HorizontalAlignment="Right"
                            VerticalAlignment="Top"
                            DefaultLabelPosition="Right"
                            Background="{StaticResource Gray1}">
                                <AppBarButton Label="Refresh" Icon="Refresh"/>
                                <AppBarButton Label="Import" Icon="Import"/>
                            </CommandBar>
                        </Grid>
                    </Grid>
                </DataTemplate>
            </NavigationView.HeaderTemplate>
            <NavigationView.PaneFooter>
                <HyperlinkButton x:ConnectionId='2' Name="MoreInfoButton"
                                 Content="M"
                                                               
                                 AccessKey="M"
                                 Margin="12,0" Width="20"/>
            </NavigationView.PaneFooter>
            <Frame x:ConnectionId='3' x:Name="ContentFrame" >
                <Frame.ContentTransitions>
                    <TransitionCollection>
                        <NavigationThemeTransition/>
                    </TransitionCollection>
                </Frame.ContentTransitions>
            </Frame>
        </NavigationView>
    </Grid>
</Page>

