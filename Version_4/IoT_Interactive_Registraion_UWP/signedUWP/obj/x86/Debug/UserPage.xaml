                    <Image x:ConnectionId='41'  Name ="line1" Source="Assets/line1.png"  Grid.Row="1" Grid.Column="0" Width="250" Height="250" HorizontalAlignment="Center" VerticalAlignment="Top" Margin="45,0,0,0" Visibility="Collapsed"/>
                    <TextBlock x:ConnectionId='42' Name="TextBlock22" Text="" Grid.Row="1" Grid.Column="0"  FontSize="20" Width="100" Height="50" HorizontalAlignment="Center" VerticalAlignment="Center" TextAlignment="Right" Foreground="White" Margin="160,120,0,0"/>
                    <TextBlock x:ConnectionId='43' Name="TextBlock1" Text=" " Grid.Row="1" Grid.Column="0"  FontSize="30" Width="200" Height="50" HorizontalAlignment="Center" VerticalAlignment="Center" Foreground="White" Margin="0,200,0,0"/>
                    <TextBox x:ConnectionId='44'  Name="textBox1" Width="180"  Height="10"  Grid.Row="1" Grid.Column="0" TabIndex="0" Header="" PlaceholderText="Your Regist No."  Margin="30,160,0,0" FontSize="12"                              Foreground="Black"  AllowFocusOnInteraction="True"  IsEnabled="True" BorderBrush="{StaticResource Green1}" Background="{StaticResource Green1}"                              />
                    <Button x:ConnectionId='45' x:Name="EnterButton" Content="Enter" FontSize="20"   Grid.Row="1" Grid.Column="0" HorizontalAlignment="Center" VerticalAlignment="Bottom" Width="100"  Height="40"  Margin="0,0,30,0" Visibility="Collapsed"></Button>
                </Grid>
                <Grid x:ConnectionId='27' Name="Grid6" Grid.Column="2" Grid.Row="0" >
                    <Grid.RowDefinitions>
                        <RowDefinition Height="6" />
                        <RowDefinition Height="*" />
                        <RowDefinition Height="6" />
                    </Grid.RowDefinitions>
                   
                    <Image x:ConnectionId='32'  Name ="Num222" Source="Assets/num222.png"  Grid.Row="1" Grid.Column="0" Width="250" Height="250" HorizontalAlignment="Center" VerticalAlignment="Top" Margin="10,0,0,0" Visibility="Visible"/>
                    <Image x:ConnectionId='33' Name ="Check2" Source="Assets/check22.png"  Grid.Row="1" Grid.Column="0" Width="250" Height="250" HorizontalAlignment="Center" VerticalAlignment="Top" Margin="10,0,0,0" Visibility="Collapsed"/>
                    <Image x:ConnectionId='34' Name ="line2" Source="Assets/line1.png"  Grid.Row="1" Grid.Column="0" Width="250" Height="250" HorizontalAlignment="Center" VerticalAlignment="Top" Margin="10,0,0,0" Visibility="Collapsed"/>
                    <TextBlock x:ConnectionId='35' Name="TextBlock23" Text="" Grid.Row="1" Grid.Column="0"  FontSize="30" Width="200" Height="50" HorizontalAlignment="Center" VerticalAlignment="Center"  Foreground="White" Margin="0,120,0,0"/>
                    <TextBlock x:ConnectionId='36' Name="TextBlock2" Text=" " Grid.Row="1" Grid.Column="0"  FontSize="30" Width="200" Height="50" HorizontalAlignment="Center" VerticalAlignment="Center" Foreground="White" Margin="0,200,0,0"/>
                    <TextBox x:ConnectionId='37'  Name="textBox2" Width="130"  Height="10"  Grid.Row="1" Grid.Column="0" Header="" PlaceholderText="Your Tag ID" FontSize="12"  Margin="0,160,0,0"                             AllowFocusOnInteraction="True" Foreground="Black"  IsEnabled="False" Visibility="Visible" BorderBrush="{StaticResource Green1}" Background="{StaticResource Green1}"                              />
                    <Button x:ConnectionId='38' x:Name="EnterButton1" Content="Enter" FontSize="20"   Grid.Row="1" Grid.Column="0" HorizontalAlignment="Center"  VerticalAlignment="Bottom" Width="100"  Height="40"  IsEnabled="False" Margin="0,30,30,0" Visibility="Collapsed"></Button>
                </Grid>

                <Grid x:ConnectionId='28' Name="Grid7" Grid.Column="3" Grid.Row="0" >
                    <Grid.RowDefinitions>
                        <RowDefinition Height="5" />
                        <RowDefinition Height="*" />
                        <RowDefinition Height="5" />
                    </Grid.RowDefinitions>
                    <Image x:ConnectionId='29'  Name ="Num333" Source="Assets/num333.png"  Grid.Row="1" Grid.Column="0" Width="250" Height="250" HorizontalAlignment="Center" VerticalAlignment="Top" Margin="0,0,25,0" Visibility="Visible"/>
                    <Image x:ConnectionId='30'  Name ="Check3" Source="Assets/check33.png"  Grid.Row="1" Grid.Column="0" Width="250" Height="250" HorizontalAlignment="Center" VerticalAlignment="Top" Margin="0,0,25,0" Visibility="Collapsed"/>
                    <TextBlock x:ConnectionId='31' Name="TextBlock24" Text="" Grid.Row="1" Grid.Column="0"  FontSize="20" Width="160" Height="30" HorizontalAlignment="Center" VerticalAlignment="Center" FontWeight="SemiBold"  Foreground="Black" Margin="0,150,0,0"/>
                </Grid>
            </Grid>
        </Grid>

        <Grid x:ConnectionId='2' Name="MainGrid2" Grid.Row="0" Grid.Column="1" Background="{StaticResource Grey1}">
            <Grid.RowDefinitions>
                <RowDefinition Height="50"/>
                <RowDefinition Height="200"/>
                <RowDefinition Height="30"/>
                <RowDefinition Height="*" />
                <RowDefinition Height="50" />
            </Grid.RowDefinitions>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="20" />
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="10" />
            </Grid.ColumnDefinitions>
            <Grid x:ConnectionId='3' Name="Grid9" Grid.Row="1" Grid.Column="1" >
                <Grid.RowDefinitions >
                    <RowDefinition Height="50"/>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="50"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>


                <TextBlock x:ConnectionId='18' Name="TextBlock8" Text="Arrived" Grid.Row="0" Grid.Column="0"  FontSize="30" Width="150"  Height="50" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="10,0,0,0"  Foreground="White" FontStyle="Normal" FontWeight="Bold"                                               />
                <Grid Background="White" Grid.Column="0" Grid.Row="1">
                    <TextBlock x:ConnectionId='21' Name="TextBlock6" Text="0"  FontSize="45" Width="50"  Height="60" HorizontalAlignment="Right" VerticalAlignment="Center"  Foreground="Black" Margin="0,0,30,10" />
                </Grid>
                <TextBlock x:ConnectionId='19' Name="TextBlock7" Text=" Total  " Grid.Row="2" Grid.Column="0"  FontSize="30" Width="150"  Height="50" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="0,0,0,0" Foreground="White" FontStyle="Normal" FontWeight="Bold"                                               />
                <Grid Background="White" Grid.Column="0" Grid.Row="3">
                    <TextBlock x:ConnectionId='20' Name="TextBlock5" Text="0" FontSize="45" Width="50"  Height="60" HorizontalAlignment="Right" VerticalAlignment="Center" Foreground="Black" Margin="0,0,30,10"/>
                </Grid>
            </Grid>



            <Grid x:ConnectionId='4' Name="Grid11" Grid.Row="3" Grid.Column="1"  Margin="0,0,0,0" Opacity="1">
                <Grid.RowDefinitions>
                    <RowDefinition Height="50"/>
                    <RowDefinition Height="*" />
                    <RowDefinition Height="10" />
                </Grid.RowDefinitions>
                
                <TextBlock x:ConnectionId='12' Name="TextBlock25" Text="- Enroll List -" Grid.Row="0" Grid.Column="0" FontSize="25" Width="240"  Height="50" HorizontalAlignment="Center" VerticalAlignment="Top" TextAlignment="Center" Margin="0,0,0,0"   Foreground="White" FontStyle="Normal" FontWeight="Bold"                                                />
                <ListView x:ConnectionId='13' Name="InventoryList"           
                      ScrollViewer.VerticalScrollBarVisibility="Auto"
                      ScrollViewer.IsVerticalRailEnabled="True"
                      ScrollViewer.VerticalScrollMode="Enabled"
                      ScrollViewer.HorizontalScrollMode="Enabled"
                      ScrollViewer.HorizontalScrollBarVisibility="Auto"
                      ScrollViewer.IsHorizontalRailEnabled="True"
                      Margin="0,0,0,0"
                      CanDragItems="True"
                                                                         
                                                        Grid.Row="1"
                      IsItemClickEnabled="True"                                     SelectionMode="Single" >
                    <ListView.HeaderTemplate>
                        <DataTemplate>
                            <Grid Padding="0"  Margin="0,0,0,0">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="80"/>
                                    <ColumnDefinition Width="80"/>
                                    <ColumnDefinition Width="80"/>
                                </Grid.ColumnDefinitions>

                                <TextBlock Text="Name" Style="{ThemeResource CaptionTextBlockStyle}"  TextAlignment="Center"  FontSize="15" FontWeight="SemiBold" Foreground="White" Width="60" Height="40"/>
                                <TextBlock Grid.Column="1" Text="Check-In" Style="{ThemeResource CaptionTextBlockStyle}"  TextAlignment="Center" FontSize="15" FontWeight="SemiBold" Foreground="White" />
                                <TextBlock Grid.Column="2" Text="Tag-Id" Style="{ThemeResource CaptionTextBlockStyle}" TextAlignment="Center"  FontSize="15" FontWeight="SemiBold" Foreground="White"  />
                            </Grid>
                          

                        </DataTemplate>
                    </ListView.HeaderTemplate>
                    <ListView.ItemTemplate>
                        <DataTemplate                         >
                            <Grid x:ConnectionId='14' Height="45"                                            Margin="0,0,0,0" >
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="80"/>
                                    <ColumnDefinition Width="80"/>
                                    <ColumnDefinition Width="80"/>
                                </Grid.ColumnDefinitions>
                                <Ellipse Height="32" Width="32" VerticalAlignment="Center">
                                    <Ellipse.Fill>
                                        <ImageBrush ImageSource="Placeholder.png"/>
                                    </Ellipse.Fill>
                                </Ellipse>

                                <TextBlock x:ConnectionId='15' Grid.Column="0" VerticalAlignment="Center" Style="{ThemeResource BaseTextBlockStyle}"                        TextAlignment="Center" Foreground="White"/>
                                
                                <TextBlock x:ConnectionId='16' Grid.Column="1" Name="timeblock" VerticalAlignment="Center"                            TextAlignment="Center" Foreground="White"/>

                                <TextBlock x:ConnectionId='17' Grid.Column="2" VerticalAlignment="Center"                        TextAlignment="Center" Foreground="White"/>
                                <Border BorderBrush="white"  HorizontalAlignment="Stretch"  BorderThickness="1,1,1,1"  Grid.Column="0">
                                </Border>
                                <Border BorderBrush="white"  HorizontalAlignment="Stretch"  BorderThickness="1,1,1,1"  Grid.Column="1">
                                </Border>
                                <Border BorderBrush="white"  HorizontalAlignment="Stretch"  BorderThickness="1,1,1,1"  Grid.Column="2">
                                </Border>
                            </Grid>
                        </DataTemplate>
                    </ListView.ItemTemplate>
                </ListView>
            </Grid >
            <Grid x:ConnectionId='5' Name="Grid28" Grid.Row="4" Grid.Column="1" >
                <Grid.ColumnDefinitions>
