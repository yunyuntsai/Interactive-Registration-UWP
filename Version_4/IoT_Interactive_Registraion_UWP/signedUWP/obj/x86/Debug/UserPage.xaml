                    <ColumnDefinition Width="35" />
                    <ColumnDefinition Width="20" />
                </Grid.ColumnDefinitions>
                <Button x:ConnectionId='6' Name="button5" Grid.Column="1" FontSize="22" Foreground="White" HorizontalAlignment="Right" VerticalAlignment="Stretch" Background="{StaticResource Grey1}"                        Padding="0" BorderThickness="0" Margin="0,0,0,0">
                    <Image x:ConnectionId='11'  x:Name="Image1" Source="Assets/IoT11.png"  Stretch="Fill" Width="40" Height="50" Margin="0,5,0,0"/>
                </Button>
                <Button x:ConnectionId='7' Name="button10" Grid.Column="2" FontSize="14" Foreground="White" Background="{StaticResource Grey1}" HorizontalAlignment="Stretch" VerticalAlignment="Stretch"                         Padding="0" BorderThickness="0">
                    <Image x:ConnectionId='10'  x:Name="Image2" Source="Assets/IoT22.png" Stretch="Fill" Width="40" Height="50" Margin="0,5,0,0"/>
                </Button>
                <Button x:ConnectionId='8' Name="button15" Grid.Column="3"  FontSize="14"  Foreground="White" Background="{StaticResource Grey1}"                         Padding="0" BorderThickness="0" Margin="0,0,0,0" >
                    <Image x:ConnectionId='9'  x:Name="Image3" Source="Assets/IoT33.png" Stretch="Fill" Width="40" Height="50" Margin="0,5,0,0" HorizontalAlignment="Left"/>
                </Button>
            </Grid>
        </Grid>
    </Grid>
        
</Page>

