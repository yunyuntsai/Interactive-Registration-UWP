                    <TextBlock x:ConnectionId='49' Name="TextBlock3" Text="" Grid.Row="1" Grid.Column="0"  FontSize="45" Width="400"  Height="100" HorizontalAlignment="Center" VerticalAlignment="Center" Margin="50,30,10,0" Foreground="Black" FontWeight="Bold" TextAlignment="Center"                                               />
                </Grid>
            </Grid>

            <Grid x:ConnectionId='25' Name="Grid4" Grid.Column="0" Grid.Row="4" >
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="10"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="10"/>
                </Grid.ColumnDefinitions>
                <Grid x:ConnectionId='26' Name="Grid5" Grid.Column="1" Grid.Row="0" >
                    <Grid.RowDefinitions>
                        <RowDefinition Height="10" />
                        <RowDefinition Height="*" />
                        <RowDefinition Height="10" />
                    </Grid.RowDefinitions>
                    
                    <Image x:ConnectionId='39'  Name ="Num111" Source="Assets/num1111.png"  Grid.Row="1" Grid.Column="0" Width="250" Height="250" HorizontalAlignment="Center" VerticalAlignment="Top" Margin="45,0,0,0" Visibility="Visible"/>
