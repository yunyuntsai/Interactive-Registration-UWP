                <TextBlock x:ConnectionId='53' Name="TextBlock9"  Grid.Column="1" Text="IoT Jumpstart Workshop" FontWeight="Bold" Foreground="White" FontSize="50" Width="800" Height="100" VerticalAlignment="Center" TextAlignment="Center" Margin= "0,0,0,0"/>
            </Grid>

            <Grid x:ConnectionId='24' Name="Grid3" Grid.Row="3" Grid.Column="0" >
