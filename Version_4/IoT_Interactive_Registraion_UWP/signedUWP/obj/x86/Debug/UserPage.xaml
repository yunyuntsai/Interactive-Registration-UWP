                    <ColumnDefinition Width="390" />
                </Grid.ColumnDefinitions>
                <Grid x:ConnectionId='46' Name="Grid31" Grid.Row="1"  Grid.Column="1" Background="{StaticResource White1}" Margin="0,0,60,0">
